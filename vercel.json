{
  "version": 2,
  "builds": [
    { "src": "server/index.js", "use": "@vercel/node" },
    { "src": "package.json", "use": "@vercel/static-build" }
  ],
  "routes": [
    { "src": "/post/(?<id>[^/]+)", "dest": "/server" },
    { "src": "/api/(.*)", "dest": "/server" },
    { "src": "/uploads/(.*)", "dest": "/server" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
