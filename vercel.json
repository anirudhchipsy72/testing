{
  "version": 2,
  "public": true,
  "builds": [
    { 
      "src": "server/index.js", 
      "use": "@vercel/node" 
    },
    { 
      "src": "package.json", 
      "use": "@vercel/static-build", 
      "config": { 
        "distDir": "dist" 
      } 
    }
  ],
  "routes": [
    { 
      "src": "/post/(?<id>[^/]+)", 
      "dest": "/server",
      "headers": { "Cache-Control": "public, max-age=0, must-revalidate" },
      "public": true
    },
    { 
      "src": "/api/(.*)", 
      "dest": "/server", 
      "public": true
    },
    { 
      "src": "/uploads/(.*)", 
      "dest": "/server",
      "headers": { "Cache-Control": "public, max-age=31536000, immutable" },
      "public": true
    },
    { 
      "src": "^/static/(.*)",
      "dest": "/static/$1",
      "headers": { "Cache-Control": "public, max-age=31536000, immutable" },
      "public": true
    },
    { 
      "src": "^/assets/(.*)",
      "dest": "/assets/$1",
      "headers": { "Cache-Control": "public, max-age=31536000, immutable" },
      "public": true
    },
    {
      "src": "^/(.*)",
      "dest": "/index.html",
      "public": true
    }
  ]
}
