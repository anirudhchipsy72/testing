{
  "version": 2,
  "builds": [
    { 
      "src": "server/index.js", 
      "use": "@vercel/node" 
    },
    { 
      "src": "package.json", 
      "use": "@vercel/static-build", 
      "config": { 
        "distDir": "dist" 
      } 
    }
  ],
  "routes": [
    { 
      "src": "/post/(?<id>[^/]+)", 
      "dest": "/server",
      "headers": { 
        "Cache-Control": "public, max-age=0, must-revalidate",
        "Access-Control-Allow-Origin": "*"
      },
      "continue": true
    },
    { 
      "src": "/api/(.*)", 
      "dest": "/server",
      "headers": {
        "Access-Control-Allow-Origin": "*"
      }
    },
    { 
      "src": "/uploads/(.*)", 
      "dest": "/server",
      "headers": { 
        "Cache-Control": "public, max-age=31536000, immutable",
        "Access-Control-Allow-Origin": "*"
      }
    },
    { 
      "src": "^/static/(.*)",
      "dest": "/static/$1",
      "headers": { 
        "Cache-Control": "public, max-age=31536000, immutable",
        "Access-Control-Allow-Origin": "*"
      }
    },
    { 
      "src": "^/assets/(.*)",
      "dest": "/assets/$1",
      "headers": { 
        "Cache-Control": "public, max-age=31536000, immutable",
        "Access-Control-Allow-Origin": "*"
      }
    },
    {
      "src": "^/(.*)",
      "dest": "/index.html",
      "headers": {
        "Cache-Control": "public, max-age=0, must-revalidate"
      }
    }
  ]
}